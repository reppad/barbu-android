<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".JeuActivity" >

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/boutonRegle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageCarte"
        android:layout_alignTop="@+id/titre"
        android:contentDescription="@string/description_bouton_regle"
        android:src="@drawable/question48"
        android:onClick="afficherRegle" />

    <TextView
        android:id="@+id/texteCliquer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/boutonRegle"
        android:gravity="center"
        android:text="@string/description_image_carte"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageCarte"
        android:scaleType="centerInside"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/boutonRegle"
        android:contentDescription="@string/description_image_carte"
        android:onClick="nouvelleCarte" />

</RelativeLayout>